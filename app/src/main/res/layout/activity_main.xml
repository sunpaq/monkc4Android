<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oreisoft.sapindus.MainActivity">


    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Start"
        android:visibility="invisible"
        android:onClick="onButtonClicked"/>

    <TextView
        android:id="@+id/beengine_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="BohdiEngine"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/loading_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:text="loading textures..." />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:lineSpacingExtra="8sp"
        android:text="PS4 controller:\n
leftTrigger -> wire mode\n
rightTrigger -> zoom\n
leftShouder -> lock zoom\n
rightShouer -> unlock zoom\n
leftStick -> rotate"
        android:textAlignment="viewStart"
        android:visibility="visible" />

</RelativeLayout>
